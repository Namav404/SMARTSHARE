<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="50dp"
    android:paddingHorizontal="70dp"
    android:background="#4800cc"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/logo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EditTextEmail"
        android:drawableLeft="@mipmap/email_icon"
        android:hint="Email address"
        android:textColor="#FFF"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        android:drawablePadding="7dp"
        android:textColorHint="#999"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditTextPassword"
        android:drawableLeft="@mipmap/lock_icon"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#999"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="LOGIN"
        android:id="@+id/btnLogin"
        android:background="@drawable/selector_xml_btn_yellow"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot password?"
        android:id="@+id/TextViewFGP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/TextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don't have account? Register now"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/TextViewAdminLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Admin Login"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25sp"
        android:textColor="#FFF"/>

</LinearLayout>