<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="80dp"
    android:paddingVertical="60dp"
    android:background="#4800cc"
    tools:context=".RegistrationActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/EditTextEnroll"
        android:drawableLeft="@mipmap/id_icon"
        android:hint="Enrollment number"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="5dp"
        android:drawablePadding="8dp"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableLeft="@mipmap/user_icon"
        android:hint="Full Name"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:drawableLeft="@mipmap/email_icon"
        android:hint="Email address"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="5dp"
        android:drawablePadding="7dp"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/EditTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:drawableLeft="@mipmap/phone_icon"
        android:hint="Phone number"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="5dp"
        android:drawablePadding="7dp"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/EditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:drawableLeft="@mipmap/lock_icon"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#999"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_xml_btn_yellow"
        android:text="REGISTER" />

    <TextView
        android:id="@+id/TextViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Already have an account? Login"
        android:textSize="18sp"
        android:layout_marginTop="28dp"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>